      .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
      }

      .tooltip .tooltip-text {
        visibility: hidden;
        text-align: center;

        position: absolute;
        z-index: 1;
        left: 52px;
        top: -75px;
      }
      .tooltip .tooltip-text-low {
        text-align: left;
        top: -2px;
      }
      .tooltip .tooltip-text:before {
        content: '';
        visibility: hidden;
        width: 0;
        height: 0;
        position: absolute;

        border-top: 8px solid transparent;
        border-bottom: 8px solid transparent;
        border-right: 8px solid white;
        left: -8px;
        top: 76px;
        z-index: 1;
      }

      .tooltip .tooltip-text-low:before {
        top: -2px;
      }

      .tooltip:hover .tooltip-text {
        visibility: visible;
      }

      .tooltip:hover .tooltip-text:before {
        visibility: visible;
      }
